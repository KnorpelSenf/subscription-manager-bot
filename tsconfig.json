{
    "compilerOptions": {
        "charset": "utf8",
        "forceConsistentCasingInFileNames": true,
        "keyofStringsOnly": true,
        "module": "commonjs",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strict": true,
        "target": "es6",
        "incremental": true
    },
    "include": ["index.ts"],
    "exclude": ["./node_modules/"]
}
